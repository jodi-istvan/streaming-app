{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es2020",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2019",
            "dom"
        ],
        "useDefineForClassFields": false
    },
    "exclude": [
        "node_modules"
    ]
}
